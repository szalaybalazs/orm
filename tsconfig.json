{
  "compilerOptions": {
    "lib": [
      "es5",
      "es6",
      "es2016",
      "es2020",
      "dom"
    ],
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
    "outDir": "lib",
    "rootDir": "src"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/__tests__/**/*",
    "example/**/*"
  ]
}